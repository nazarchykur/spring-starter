<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="driver" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="PostgresDriver"/>
    </bean>
<!--    -->
<!--    по замовчуваннню всі біни singleton (тільки один на цілий наш проєкт), але можемо створити  prototype-->
<!--    і тоді при кожному посиланні на цей бін, буде створюватися новий бін-->
    
    <bean id="pool1" name="p1, p10" class="com.study.spring.database.pool.ConnectionPool" scope="prototype">
        <constructor-arg name="username" type="java.lang.String" ref="driver"/>
        <constructor-arg name="properties" type="java.util.Map">
            <null/>
        </constructor-arg>
        <constructor-arg name="poolSize" type="java.lang.Integer" value="10"/>
        <constructor-arg name="args" type="java.util.List">
            <list>
                <value>--arg1=value1</value>
                <value>--arg2=value2</value>
                <ref bean="driver"/>
            </list>
        </constructor-arg>
        <property name="properties">
            <map>
                <entry key="url" value="postgresurl"/>
                <entry key="password" value="123"/>
                <entry key="driver" value-ref="driver"/>
            </map>
        </property>
    </bean> 

<!--    наприклад тут бачимо посилання  отже створиться і передасться новий бін -->
  <bean id="companyRepository" class="com.study.spring.database.repository.CompanyRepository" factory-method="of">
      <constructor-arg ref="pool1"/>
  </bean>
    
</beans>